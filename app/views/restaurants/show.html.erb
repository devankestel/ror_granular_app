<h1><%= @restaurant.name %></h1>

<h2>Hours</h2>
<table>
  <thead>
    <tr>
      <th>Day</th>
      <th>Open</th>
      <th>Close</th>
    </tr>
  </thead>
  <tbody>
    <% @restaurant.hours.each do |day, times| %>
      <tr>
        <td><%= day %></td>
        <td><%= times["Open"] %></td>
        <td><%= times["Closed"]%></td>
      </tr>
  </tbody>
</table>